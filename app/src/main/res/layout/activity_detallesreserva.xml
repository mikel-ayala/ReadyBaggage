<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesReservaActivity">

    <include
        android:id="@+id/include7"
        layout="@layout/menu_superior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/dRvScrollviewMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/include8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dRvImgProducto"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/maleta_pequenia" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/dRvTxtId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID:000000"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:background="@drawable/rounded_green"
                    android:padding="7dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="25dp"/>
                <TextView
                    android:id="@+id/dRvTxtFsolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="21/12/2021"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:background="@drawable/rounded_orange"
                    android:padding="7dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/dRvEditNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundededittext"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Nombre y apellidos"
                    android:padding="10dp"
                    tools:ignore="TouchTargetSizeCheck" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/fecha_rec"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/dRvEditFrecogida"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/roundededittext"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="F. Recogida"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/fecha_ent"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/dRvEditFentrega"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/roundededittext"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="F. Entrega"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/hora_rec"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/dRvEditHrecogida"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/roundededittext"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="H. Recogida"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/hora_ent"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/dRvEditHentrega"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/roundededittext"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="H. Entrega"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/estadoReser"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/dRvSpinnerEstado"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/roundededittext"
                        android:padding="10dp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="20dp">

                    <fragment
                        android:id="@+id/fragmentMap"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".DetallesReservaActivity" />
                </androidx.cardview.widget.CardView>

                <android.widget.Button
                    android:id="@+id/dRvBtnModificarReserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_blue"
                    android:text="@string/modReserva"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="35dp"
        android:alpha="0.8"
        android:background="@drawable/sombramenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dRvScrollviewMain" />

    <include
        android:id="@+id/include8"
        layout="@layout/menu_inferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>