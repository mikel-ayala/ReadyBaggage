<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemReservasMain"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/itemReservasIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/maleta_pequenia" />
    <LinearLayout
        android:id="@+id/itemReservasLLContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:id="@+id/itemReservasIdEstado"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:weightSum="1">

            <TextView
                android:id="@+id/itemReservasId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="ID: 00001"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/itemReservasEstado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text="Estado"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/rounded_blue"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_marginStart="25dp"/>
            <!--
            <android.widget.Button
                android:id="@+id/itemReservasEstado"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/white"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="CONFIRMADA"
                tools:ignore="TouchTargetSizeCheck" />
                -->

        </LinearLayout>
        <TextView
            android:id="@+id/itemReservasNombre"
            android:text="Nombre: Luis Daniel Villarroel"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/itemReservasOrigen"
            android:text="Origen: N/A"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/itemReservasDestino"
            android:text="Destino: N/A"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>


    </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>